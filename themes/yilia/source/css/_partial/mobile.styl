.left-col {
    display: none;
}
.mid-col {
    left: 0;
}
.header-subtitle{
    padding: 0 24px;
}
.article{
    padding: 10px;
    margin: 10px;
    .article-entry{
        padding-right: 0;
        padding-top: 10px;
    }
    .article-title{
        font-size: 18px;
        height: 28px;
        overflow: hidden;
        display: block;
        white-space: nowrap;
        text-overflow: ellipsis;
    }
    .article-meta{
        width: 100%;
        border-bottom: 1px dotted #ddd;
        left: 0;
        top: 45px;
        text-align: left;
        height: 30px;
        position: ralative;
        .article-date{
            font-size: 12px;
            border-radius: 0;
            color: #666;
            background: none;
            height: auto;
            padding: 0;
            margin: 0;
            width: 100%;
            text-align: left;
            margin-left: 10px;
            time{
                width: auto;
            }
        }
        .article-tag-list{
            margin-top: 7px;
            position: absolute;
            right: 10px;
            top: 0;
            &:before{
                float: left;
                margin-top: 1px;
                left: 0;
            }
            .article-tag-list-item{
                float: left;
                padding-left: 0;
                width: auto;
                max-width: 83px;
            }
        }
        .article-category{
            margin-top: 7px;
            position: absolute;
            right: 10px;
            top: -30px;
            &:before{
                float: left;
                margin-top: 1px;
                left: 15px;
            }
            .article-category-link{
                max-width: 83px;
                width: auto;
                padding-left:10px;
            }
        }
    }
    .article-nav-link-wrap{
        margin: 5px 0;
        strong{
            float: left;
            margin-right: 5px;
        }
    }
    #article-nav-older{
        float: none;
        display: block;
    }
}
.share{
    padding: 3px 10px;
}
.duoshuo {
    padding: 0 13px;
}

#mobile-nav{
    display: block;
}

#page-nav .extend{
    opacity: 1;
}

.instagram .open-ins{
    left: 2px;
    top: -45px;
    color: #aaa;
}

.archives-wrap{
    margin: 10px 10px 0px;
    padding: 10px;
    .archive-article-title{
        font-size: 14px;
    }
    .archive-year-wrap{
        position: relative;
        padding: 0 0 0 0;
        a{
            padding: 0 0 0 0;
        }
    }
    .article-meta{
        display: none;
        .archive-article-date{
            font-size: 12px;
        }
        .article-tag-list-link{
            font-size: 12px;
        }
    }
}
.archives{
    .archive-article{
        margin-left: 0;
    }
}

#footer {
  margin: 10px;
}
